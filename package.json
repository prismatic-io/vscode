{
  "name": "prismatic-extension",
  "displayName": "Prismatic",
  "publisher": "prismatic",
  "description": "This VS Code extension improves the developer experience around Code Native Integrations (CNI) by enabling test execution, integration imports, instance configuration (including config variables, debug mode, and trigger payloads), and inspection of execution resultsâ€”all directly within the IDE. Developers can view detailed step-by-step outputs and logs for both onTrigger and onExecution stages, streamlining the build, test, and debug workflow without leaving VS Code.",
  "version": "0.0.1",
  "icon": "resources/prismatic-icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prismatic.configWizard",
        "title": "Configuration Wizard",
        "category": "Prismatic"
      },
      {
        "command": "prismatic.me",
        "title": "Me",
        "category": "Prismatic"
      },
      {
        "command": "prismatic.me:token",
        "title": "Refresh Token",
        "category": "Prismatic"
      },
      {
        "command": "prismatic.login",
        "title": "Login",
        "category": "Prismatic"
      },
      {
        "command": "prismatic.logout",
        "title": "Logout",
        "category": "Prismatic"
      }
    ],
    "views": {
      "prismatic": [
        {
          "type": "webview",
          "id": "settings.webview",
          "name": "Prismatic"
        }
      ],
      "executionResults": [
        {
          "type": "webview",
          "id": "executionResults.webview",
          "name": "Execution Results"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prismatic",
          "title": "Prismatic",
          "icon": "resources/prismatic.svg"
        }
      ],
      "panel": [
        {
          "id": "executionResults",
          "title": "Execution Results",
          "icon": "resources/prismatic.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "npm run build && vsce package",
    "compile-tests": "tsc -p . --outDir extension",
    "watch-tests": "tsc -p . -w --outDir extension",
    "pretest": "npm run compile-tests && npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./extension/test/runTest.js",
    "dev": "npm run build && npm run watch"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.17",
    "@prismatic-io/prism": "7.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.23.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  }
}
