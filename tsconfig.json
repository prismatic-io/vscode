{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@types/jest",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@type/*": ["src/types/*"],
      "@extension/*": ["src/extension/*"],
      "@webview/*": ["src/webview/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules", ".vscode-test"]
}
