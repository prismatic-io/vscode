{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/extension/**/*.js"],
      "preLaunchTask": "npm: build:dev",
      "env": {
        "VSCODE_DEBUG_MODE": "true",
        "NODE_ENV": "development"
      },
      "trace": true
    }
  ]
}
